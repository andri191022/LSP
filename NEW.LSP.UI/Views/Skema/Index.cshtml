@model IEnumerable<NEW.LSP.Dto.Tb_Skema>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }



<p>
    @Html.ActionLink("Add New", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>

<table id="example1" class="table table-bordered table-striped table-hover">

    <thead>
        <tr>
            <th style="text-align:center">
                Kode Kompetensi Keahlian
            </th>
            <th style="text-align:center">
                Kode Skema
            </th>
            <th style="text-align:center">
                SKEMA
            </th>
            <th style="text-align:center">Aksi</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Kode_KK)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Kode_Skema)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Skema)
    </td>
    <td style="text-align:center">
        @Html.ActionLink("   ", "Edit", new { id = item.Kode_Skema }, new { @class = "fas fa-edit" }) &nbsp;&nbsp;| &nbsp;&nbsp;
        @Html.ActionLink("   ", "Details", new { id = item.Kode_Skema }, new { @class = "fas fa-search" }) &nbsp;&nbsp;|&nbsp;&nbsp;
        <a href="#">
            <span onclick="deleteConfirm('@item.Kode_Skema', '@item.Skema');">
                <i class="fa fa-trash" data-toggle="modal" data-target="#modal-primary"></i>
            </span>
        </a>
    </td>
</tr>
}
    </tbody>
</table>

<script>$(document).ready(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            "lengthMenu": [[25, 50, -1], [25, 50, "All"]]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="../Home">Home</a></li><li class="breadcrumb-item active">All Data</li></ol >');
        $("#dashbordMain").html("Data Skema");

        ADMenuPropinsi('mnuSkema');
    });

    function deleteConfirm(id, a) {
        $("#addMsg1").text("Kode : " + id);
        $("#addMsg2").text(" Skema : " + a);
        $("#noID").text(id);
    }

    function deleteOK() {
        var id = $("#noID").text();
        var ss = 'Skema/Delete/' + id;
        window.location.href = ss;
    }</script>
