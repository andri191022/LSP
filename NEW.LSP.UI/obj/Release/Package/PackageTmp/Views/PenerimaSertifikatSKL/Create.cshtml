    $('#NPSN').on("change", function () {
        var NPSN = $('#NPSN').val();
        var obj = { NPSN: NPSN };
        AjaxCall('/PenerimaSertifikatSKL/GetPenerimaSertifikatSKL', JSON.stringify(obj), 'POST').done(function (response) {
            if (response.length > 0) {
                var tt = jQuery.parseJSON(response);
                $("#txtNPSN").val(tt[0].NPSN);
                $("#Nama_KK").val(tt[0].Nama_KK);
            }
        }).fail(function (error) {
            alert(error.StatusText);
        });
    });

</script>

