<script>
    $(document).ready(function () {
        $("#tblAPPKK").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            "lengthMenu": [[25, 50, -1], [25, 50, "All"]]

        }).buttons().container().appendTo('#tblAPPKK_wrapper .col-md-6:eq(0)');
    });

    function approveConfirm(id, a, b) {
        $("#addMsg11").text("Nama Sekolah : " + a);
        $("#addMsg21").text("Kompetensi Keahlian : " + b);
        $("#noID1").text(id);
    }

    function approveOK() {
        var id = $("#noID1").text();
        var ss = 'Home/Approve/' + id;
        window.location.href = ss;
    }
</script>