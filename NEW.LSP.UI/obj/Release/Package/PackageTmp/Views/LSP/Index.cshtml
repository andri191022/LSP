@model IEnumerable<NEW.LSP.Dto.Custom.Tb_LSP_cstm>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Add New", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>
<table id="example1" class="table table-bordered table-striped">

    <thead>
        <tr>
            <th style="text-align:center">Nomor Lisensi</th>
            @*<th style="text-align:center">NPSN</th>*@
            <th style="text-align:center">Nama Sekolah(LSP P1)</th>
            <th style="text-align:center">Kabupaten</th>
            <th style="text-align:center">Status</th>
            @*<th style="text-align:center">Berlaku Hingga</th>*@
            <th style="text-align:center">Aksi</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nomer_Lisensi)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.NPSN)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Nama_Sekolah)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaKabupaten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status_LSP)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Berlaku_Sampai)
                    </td>*@
                <td style="text-align:center">
                    @Html.ActionLink(" ", "Edit", new { id = item.Nomer_Lisensi }, new { @class = "fas fa-edit" }) &nbsp;&nbsp;| &nbsp;&nbsp;
                    @Html.ActionLink(" ", "Details", new { id = item.Nomer_Lisensi }, new { @class = "fas fa-search" })&nbsp;&nbsp;| &nbsp;&nbsp;
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Nomer_Lisensi })*@
                    <a href="#">
                        <span onclick="deleteConfirm('@item.Nomer_Lisensi','@item.Nama_Sekolah');">
                            <i class="fa fa-trash" data-toggle="modal" data-target="#modal-primary"></i>
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>



<script>
    $(document).ready(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            "lengthMenu": [[25, 50, -1], [25, 50, "All"]]

        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');


        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="../Home">Home</a></li><li class="breadcrumb-item active">All Data</li></ol >');
        $("#dashbordMain").html("Data LSP");
        ADMenuPropinsi('mnuLSPSMK');
    });


    function deleteConfirm(id, nama) {
        $("#addMsg1").text("Nomer Lisensi : " + id);
        $("#addMsg2").text("Nama Sekolah : " + nama);
        $("#noID").text(id);
    }

    function deleteOK() {
        var id = $("#noID").text();
        var ss = 'LSP/Delete/' + id;
        window.location.href = ss;
    }
</script>



