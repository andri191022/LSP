@model IEnumerable<NEW.LSP.Dto.Custom.Tb_Kompetensi_Keahlian_Terlisensi_cstm>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Add New", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>

<table id="example1" class="table table-bordered table-striped table-hover">

    <thead>
        <tr>
            <th style="text-align:center">
                Nama Sekolah
                @*@Html.DisplayNameFor(x => x.Nama_Sekolah)*@
            </th>
            <th style="text-align:center">
                Kabupaten
                @*@Html.DisplayNameFor(x => x.NamaKabupaten)*@
            </th>
            <th style="text-align:center">
                Kompetensi Keahlian
                @*@Html.DisplayNameFor(x => x.Nama_KK)*@
            </th>
            <th style="text-align:center">
                Jumlah Asesor
                @*@Html.DisplayNameFor(x => x.Jumlah_asesor)*@
            </th>
            <th style="text-align:center">
                Status Terlisensi
                @*@Html.DisplayNameFor(x => x.Status_KK_Terlisensi)*@
            </th>
            <th style="text-align:center">Aksi</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama_Sekolah)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaKabupaten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama_KK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jumlah_asesor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status_KK_Terlisensi)
                </td>
                <td style="text-align:center">
                    @Html.ActionLink("   ", "Edit", new { id = item.Kode_KK_Terlisensi }, new { @class = "fas fa-edit" }) &nbsp;&nbsp;| &nbsp;&nbsp;
                    @Html.ActionLink("   ", "Details", new { id = item.Kode_KK_Terlisensi }, new { @class = "fas fa-search" }) &nbsp;&nbsp;|&nbsp;&nbsp;
                    <a href="#">
                        <span onclick="deleteConfirm('@item.Kode_KK_Terlisensi', '@item.Nama_Sekolah','@item.Nama_KK');">
                            <i class="fa fa-trash" data-toggle="modal" data-target="#modal-primary"></i>
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            "lengthMenu": [[25, 50, -1], [25, 50, "All"]]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="../HomeSKL">Home</a></li><li class="breadcrumb-item active">All Data</li></ol >');
        $("#dashbordMain").html("Data Kompetensi Keahlian Terlisensi");

        ADMenuSekolah('mnuKKTerlisensiSKL');
    });

    function deleteConfirm(id, a, b) {
        $("#addMsg1").text("Nama Sekolah : " + a);
        $("#addMsg2").text("Kompetensi Keahlian : " + b);
        $("#noID").text(id);
    }

    function deleteOK() {
        var id = $("#noID").text();
        var ss = 'KKTerlisensiSKL/Delete/' + id;
        window.location.href = ss;
    }
</script>
