@model IEnumerable<NEW.LSP.Dto.Custom.Tb_Jejaring_cstm>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Add New", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>

<table id="example1" class="table table-bordered table-striped">

    <thead>
        <tr>
            <th style="text-align:center">
                Nama Sekolah(LSP P1)
                @*@Html.DisplayNameFor(model => model.Nama_Sekolah)*@
            </th>
            <th style="text-align:center">
                Kabupaten
                @*@Html.DisplayNameFor(model => model.NamaKabupaten)*@
            </th>
            <th style="text-align:center">
                Nama Sekolah(Jejaring)
                @*@Html.DisplayNameFor(model => model.Nama_SekolahJ)*@
            </th>
            <th style="text-align:center">
                Kabupaten 
                @*@Html.DisplayNameFor(model => model.NamaKabupatenJ)*@
            </th>
            <th style="text-align:center">
                Kompetensi Keahlian
                @*@Html.DisplayNameFor(model => model.Nama_KK)*@
            </th>
            <th style="text-align:center">Aksi</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama_Sekolah)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaKabupaten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama_SekolahJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaKabupatenJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama_KK)
                </td>
                <td style="text-align:center">
                    @Html.ActionLink("   ", "Edit", new { id = item.Kode_Jejaring }, new { @class = "fas fa-edit" }) &nbsp;&nbsp;| &nbsp;&nbsp;
                    @Html.ActionLink("   ", "Details", new { id = item.Kode_Jejaring }, new { @class = "fas fa-search" }) &nbsp;&nbsp;|&nbsp;&nbsp;
                    <a href="#">
                        <span onclick="deleteConfirm('@item.Kode_Jejaring','@item.Nama_SekolahJ','@item.Nama_KK');">
                            <i class="fa fa-trash" data-toggle="modal" data-target="#modal-primary"></i>
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            "lengthMenu": [[25, 50, -1], [25, 50, "All"]]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="../Home">Home</a></li><li class="breadcrumb-item active">All Data</li></ol >');
        $("#dashbordMain").html("Data Jejaring");

        ADMenuPropinsi('mnuJejaringLSP');
    });
    function deleteConfirm(id, a, b) {
        $("#addMsg1").text("Nama Sekolah : " + a);
        $("#addMsg2").text("Kompetensi Keahlian : " + b);
        $("#noID").text(id);
    }

    function deleteOK() {
        var id = $("#noID").text();
        var ss = 'Jejaring/Delete/' + id;
        window.location.href = ss;
    }

</script>

