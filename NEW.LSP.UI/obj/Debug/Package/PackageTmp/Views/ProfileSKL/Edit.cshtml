@model NEW.LSP.UI.Models.m_Tb_SMK_cstm
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit</h3>
        </div>
        <div class="card-body">

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.NPSN, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NPSN, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        @Html.ValidationMessageFor(model => model.NPSN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nama_Sekolah, "Nama Sekolah", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nama_Sekolah, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nama_Sekolah, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Kode_Kabupaten, "Kabupaten", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Kode_Kabupaten, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.Kode_Kabupaten, (SelectList)ViewBag.dataKabupaten, new { @class = "form-control form-control-chosen-required" })
                        @Html.ValidationMessageFor(model => model.Kode_Kabupaten, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status_Sekolah, "Status Sekolah", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Status_Sekolah, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.Status_Sekolah, (SelectList)ViewBag.StatusSekolah, new { @class = "form-control form-control-chosen-required" })
                        @Html.ValidationMessageFor(model => model.Status_Sekolah, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status_LSP, "Status LSP", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Status_LSP, ViewBag.StatusLSP as SelectList, new { @class = "form-control form-control-chosen-required" })
                        @Html.ValidationMessageFor(model => model.Status_LSP, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="card-footer">
                @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-success" })
                <input type="submit" value="Save" class="btn btn-primary float-right" />
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
}

