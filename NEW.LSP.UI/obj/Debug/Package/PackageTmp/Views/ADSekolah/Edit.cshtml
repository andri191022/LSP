                        @*@Html.EditorFor(model => model.NPSN, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.NPSN, (SelectList)ViewBag.dataSMK, new { @class = "form-control form-control-chosen-required" })
