@model  NEW.LSP.UI.Models.m_Tb_SMK_Kompetensi_Keahlian_cstm

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit</h3>
        </div>
        <div class="card-body">

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" hidden="hidden">
                    @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NPSN, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.NPSN, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })*@
                        @Html.DropDownListFor(model => model.NPSN, ViewBag.dataSMK as SelectList, new { @class = "form-control form-control-chosen-required" })
                        @Html.ValidationMessageFor(model => model.NPSN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Kode_KK, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Kode_KK, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.Kode_KK, ViewBag.Kode_KKList as SelectList, new { @class = "form-control form-control-chosen-required" })
                        @Html.ValidationMessageFor(model => model.Kode_KK, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="card-footer">
                @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-success" })
                <input type="submit" value="Save" class="btn btn-primary float-right" />
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="/Home">Home</a></li><li class="breadcrumb-item"><a href="../">Data SMK Kompetensi Keahlian</a></li><li class="breadcrumb-item active">Edit Data</li></ol >');
        $("#dashbordMain").html("Edit Data");

        ADMenuPropinsi('mnuSMKKK');
    });
</script>
