@model NEW.LSP.UI.Models.m_Tb_LSP_cstm
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit</h3>
        </div>
        <div class="card-body">

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Nomer_Lisensi, "Nomor Lisensi", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @if (@Model.Nomer_Lisensi == null)
                        {
                            @Html.EditorFor(model => model.Nomer_Lisensi, new { htmlAttributes = new { @class = "form-control" } })
                        }
                        else
                        {
                            @Html.EditorFor(model => model.Nomer_Lisensi, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        }

                        @Html.ValidationMessageFor(model => model.Nomer_Lisensi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NPSN, "NPSN", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NPSN, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.NPSN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nama_Sekolah, "Nama Sekolah", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nama_Sekolah, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.Nama_Sekolah, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NamaKabupaten, "Kabupaten", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NamaKabupaten, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                        @Html.ValidationMessageFor(model => model.NamaKabupaten, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Status_LSP, "Status LSP", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.EditorFor(model => model.Status_LSP, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.Status_LSP, (SelectList)ViewBag.StsLisensiLSP, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Status_LSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Berlaku_Sampai, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="input-group date">
                            @Html.EditorFor(model => model.Berlaku_Sampai, new { htmlAttributes = new { @class = "form-control datepicker" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.Berlaku_Sampai, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="card-footer">
                @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-success" })
                <input type="submit" value="Save" class="btn btn-primary float-right" />
                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>

}

<script>
    $(document).ready(function () {
        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="/HomeSKL">Home</a></li><li class="breadcrumb-item"><a href="../">Data LSP</a></li><li class="breadcrumb-item active">Edit Data</li></ol >');
        $("#dashbordMain").html("Edit Data");

        ADMenuSekolah('mnuLSPSKL');
    });

</script>

