@model Tuple<NEW.LSP.UI.Models.m_Tb_LSP_cstm, List<NEW.LSP.Dto.Custom.Tb_Jejaring_cstm>>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="@(Model.Item1.Nomer_Lisensi != null ? "display:block" : "display:none")">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">&nbsp;</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.Item1.Nomer_Lisensi)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.Item1.Nomer_Lisensi)&nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.Item1.NPSN)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.Item1.NPSN)&nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.Item1.Nama_Sekolah)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.Item1.Nama_Sekolah)&nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.Item1.NamaKabupaten)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.Item1.NamaKabupaten)&nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.Item1.Status_LSP)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.Item1.Status_LSP)&nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.Item1.Berlaku_Sampai)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @*@Html.DisplayFor(model => model.Berlaku_Sampai.ToString())&nbsp;*@
                    @if (@Model.Item1.Berlaku_Sampai != null)
                    {@Model.Item1.Berlaku_Sampai.Value.ToString("dd/MMM/yyyy")}
                else
                {@Html.DisplayFor(Model => Model.Item1.Berlaku_Sampai)}
                    &nbsp;
                    <hr />
                </div>
            </div>
        </div>

        <div class="card-footer">
            @Html.ActionLink("Ubah", "Edit", new { id = Model.Item1.Nomer_Lisensi }, new { @class = "btn btn-primary" })
            <div class=" float-right">
                <b>Creator:</b> @Html.DisplayFor(model => model.Item1.creator) &nbsp;-&nbsp; @if (@Model.Item1.created != null)
                {@Model.Item1.created.Value.ToString("dd/MMM/yyyy HH:mm")},&nbsp;<b>Editor:</b> @Html.DisplayFor(model => model.Item1.editor)&nbsp;-&nbsp; @if (@Model.Item1.edited != null)
                {@Model.Item1.edited.Value.ToString("dd/MMM/yyyy HH:mm")}
            </div>
        </div>
    </div>
</div>

<div style="@(Model.Item1.Nomer_Lisensi == null ? "display:block" : "display:none")">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">&nbsp;</h3>
        </div>
        @{
            string nmS = string.Empty;
            if (Model.Item2.Count() > 0)
            {
                nmS = Model.Item2.First().Nama_SekolahJ;
            }
            else
            {
                nmS = "Anda";
            }
        }
        <div class="card-body">
            Nama Sekolah <u><b> @nmS </b></u> Terdaftar Sebagai Jejaring Dari:
            <br />
            <hr />
            @{ int i = 0;}
            @foreach (var item in Model.Item2)
            {
                i++;
                <p> @i.  @Html.DisplayFor(modelItem => item.Nama_Sekolah) Pada Kompetensi Keahlian @Html.DisplayFor(modelItem => item.Nama_KK)</p>
            }

            Jika SMK anda sudah memiliki LSP harap hubungi Admin
        </div>

        <div class="card-footer">
            &nbsp;
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="../HomeSKL">Home</a></li><li class="breadcrumb-item active">All Data</li></ol >');
        $("#dashbordMain").html("");

        ADMenuSekolah('mnuLSPSKL');
    });

</script>
