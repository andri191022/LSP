@model IEnumerable<NEW.LSP.Dto.Tb_Admin_Provinsi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    @Html.ActionLink("Add New", "Create", new { area = "" }, new { @class = "btn btn-primary" })
</p>

<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th style="text-align:center">
                Nama Lengkap
                @*@Html.DisplayNameFor(model => model.NamaLengkap)*@
            </th>
            <th style="text-align:center">Aksi</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                ********
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamaLengkap)
            </td>
            <td style="text-align:center">
                @Html.ActionLink("   ", "Edit", new { id = item.ID }, new { @class = "fas fa-edit" }) &nbsp;&nbsp;| &nbsp;&nbsp;
                @Html.ActionLink("   ", "Details", new { id = item.ID }, new { @class = "fas fa-search" }) &nbsp;&nbsp;|&nbsp;&nbsp;
                <a href="#">
                    <span onclick="deleteConfirm('@item.ID','@item.Username','@item.NamaLengkap');">
                        <i class="fa fa-trash" data-toggle="modal" data-target="#modal-primary"></i>
                    </span>
                </a>
            </td>
        </tr>
    }

</table>


<script>
    $(document).ready(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
            "lengthMenu": [[25, 50, -1], [25, 50, "All"]]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="../Home">Home</a></li><li class="breadcrumb-item active">All Data</li></ol >');
        $("#dashbordMain").html("Data Admin Provinsi");

        ADMenuPropinsi('mnuAdminProvinsi');
    });
    function deleteConfirm(id, a, b) {
        $("#addMsg1").text("Username : " + a);
        $("#addMsg2").text("Nama Lengkap : " + b);
        $("#noID").text(id);
    }

    function deleteOK() {
        var id = $("#noID").text();
        var ss = 'ADProvinsi/Delete/' + id;
        window.location.href = ss;
    }

</script>

