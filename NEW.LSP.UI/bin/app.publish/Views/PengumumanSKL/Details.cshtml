@model NEW.LSP.UI.Models.m_Tb_Pengumuman

@{
    ViewBag.Title = "Pengumuman";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Details</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.no)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.no)&nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.tanggal)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-md-9">
                    @if (@Model.tanggal != null)
                    {@Model.tanggal.Value.ToString("dd/MMM/yyyy")} &nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.tanggal_hingga)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-md-9">
                    @if (@Model.tanggal_hingga != null)
                    {@Model.tanggal_hingga.Value.ToString("dd/MMM/yyyy")} &nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.judul)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.judul)&nbsp;
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-2" style="font-weight: bold;">
                    @Html.DisplayNameFor(model => model.isi)
                    <hr />
                </div>
                <div class="col-1 text-center">
                    :
                </div>
                <div class="col-9">
                    @Html.DisplayFor(model => model.isi)&nbsp;
                    <hr />
                </div>
            </div>

        </div>

        <div class="card-footer">
            @Html.ActionLink("BACK", "Index", "PengumumanSKL", new { area = "" }, new { @class = "btn btn-primary" })
            <div class=" float-right">
                <b>Creator:</b> @Html.DisplayFor(model => model.creator) &nbsp;-&nbsp; @if (@Model.created != null)
                {@Model.created.Value.ToString("dd/MMM/yyyy HH:mm")},&nbsp;<b>Editor:</b> @Html.DisplayFor(model => model.editor)&nbsp;-&nbsp; @if (@Model.edited != null)
                {@Model.edited.Value.ToString("dd/MMM/yyyy HH:mm")}
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $("#linkBar").html('<ol class="breadcrumb float-sm-right"><li class="breadcrumb-item"><a href="../HomeSKL">Home</a></li><li class="breadcrumb-item active">All Data</li></ol >');
        $("#dashbordMain").html("Detail Data");

        ADMenuSekolah('mnuPengumumanSKL');
    });
</script>